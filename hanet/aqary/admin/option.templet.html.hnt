// Extract request variables
extract($_REQUEST);

// Check if this is an AJAX request
$is_ajax_request = isset($_POST['ajax_submit']) && $_POST['ajax_submit'] == '1';

// Process template save
if (isset($_POST['htmldata']) && isset($_POST['seltemplet'])) {
    $removearr = array("<pre>", "</pre>", "</textarea>");
    $_POST['htmldata'] = preg_replace('/<textarea(.*?)>/', "", $_POST['htmldata']);
    $_POST['htmldata'] = str_ireplace($removearr, "", $_POST['htmldata']);
    $_POST['htmldata'] = str_ireplace("&gt;", ">", $_POST['htmldata']);
    $_POST['htmldata'] = str_ireplace("&lt;", "<", $_POST['htmldata']);

    $template_path = "word/" . $_POST['seltemplet'];
    $save_result = file_put_contents($template_path, $_POST['htmldata']);

    if ($is_ajax_request) {
        header('Content-Type: application/json; charset=utf-8');
        if ($save_result !== false) {
            echo json_encode([
                'success' => true,
                'message' => 'تم حفظ القالب بنجاح',
                'template' => $_POST['seltemplet']
            ], JSON_UNESCAPED_UNICODE | JSON_UNESCAPED_SLASHES);
        } else {
            echo json_encode([
                'success' => false,
                'error' => 'فشل حفظ القالب'
            ], JSON_UNESCAPED_UNICODE);
        }
        exit();
    }
}

// Include storage helpers
require_once(__DIR__ . '/../lib/storage/helpers.php');

// Handle restore default template
if (isset($_POST['restore_template']) && isset($_POST['template_name'])) {
    $template_name = $_POST['template_name'];
    $original_path = upload_path('documents.templates.original', $template_name);
    $current_path = upload_path('documents.templates.word', $template_name);

    if (file_exists($original_path)) {
        $restore_result = copy($original_path, $current_path);

        if ($is_ajax_request) {
            header('Content-Type: application/json; charset=utf-8');
            if ($restore_result) {
                echo json_encode([
                    'success' => true,
                    'message' => 'تم استعادة القالب الافتراضي بنجاح'
                ], JSON_UNESCAPED_UNICODE);
            } else {
                echo json_encode([
                    'success' => false,
                    'error' => 'فشل استعادة القالب'
                ], JSON_UNESCAPED_UNICODE);
            }
            exit();
        }
    } else {
        if ($is_ajax_request) {
            header('Content-Type: application/json; charset=utf-8');
            echo json_encode([
                'success' => false,
                'error' => 'القالب الافتراضي غير موجود'
            ], JSON_UNESCAPED_UNICODE);
            exit();
        }
    }
}

