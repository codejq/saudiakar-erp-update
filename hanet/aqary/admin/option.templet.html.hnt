<script>
/**
 * Bootstrap Toast Notification System
 */
function showBootstrapNotification(message, type = 'success', duration = 3000) {
    const toastId = 'toast-' + Date.now();

    const iconMap = {
        'success': 'bi-check-circle-fill text-success',
        'error': 'bi-x-circle-fill text-danger',
        'warning': 'bi-exclamation-triangle-fill text-warning',
        'loading': 'bi-hourglass-split text-info'
    };

    const bgMap = {
        'success': 'bg-success-subtle',
        'error': 'bg-danger-subtle',
        'warning': 'bg-warning-subtle',
        'loading': 'bg-info-subtle'
    };

    const icon = iconMap[type] || iconMap['success'];
    const bgClass = bgMap[type] || bgMap['success'];

    const toastHtml = `
        <div id="${toastId}" class="toast ${bgClass} border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-body d-flex align-items-center gap-3 p-3">
                <i class="bi ${icon} fs-4"></i>
                <div class="flex-grow-1" dir="rtl">${message}</div>
                ${type !== 'loading' ? '<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>' : ''}
            </div>
        </div>
    `;

    const container = document.getElementById('toast-container');
    container.insertAdjacentHTML('beforeend', toastHtml);

    const toastElement = document.getElementById(toastId);
    const toast = new bootstrap.Toast(toastElement, {
        autohide: type !== 'loading',
        delay: duration
    });

    toast.show();

    toastElement.addEventListener('hidden.bs.toast', function() {
        toastElement.remove();
    });

    return toast;
}

/**
 * Template Selection Handler
 */
$(document).ready(function() {
    const $selectTemplate = $('#seltemplet');
    const $showSourceCode = $('#showsourcecode');
    const $loadingIndicator = $('#loading-indicator');
    const $iframe1 = $('#templet1');
    const $iframe2 = $('#templet2');

    // Template change handler
    $selectTemplate.on('change', function() {
        const templateName = $(this).val();
        const showCode = $showSourceCode.is(':checked') ? '&showcode=1' : '';

        // Show loading
        $loadingIndicator.show();

        // Update template preview iframe
        $iframe1.attr('src', '/aqary/admin/displaytemplet.hnt?templetname=' + templateName + showCode);

        // Update variables iframe with delay
        setTimeout(function() {
            $iframe2.attr('src', '/aqary/admin/displayvars.hnt?templetname=' + templateName);
        }, 4500);

        // Hide loading after delay
        setTimeout(function() {
            $loadingIndicator.hide();
        }, 5000);
    });

    // Show source code checkbox handler
    $showSourceCode.on('change', function() {
        const templateName = $selectTemplate.val();
        const showCode = $(this).is(':checked') ? '&showcode=1' : '';

        // Show loading briefly
        $loadingIndicator.show();

        setTimeout(function() {
            $iframe1.attr('src', '/aqary/admin/displaytemplet.hnt?templetname=' + templateName + showCode);

            setTimeout(function() {
                $loadingIndicator.hide();
            }, 600);
        }, 100);
    });

    /**
     * Save Template Handler
     */
    $('#savechanges').on('click', function() {
        const $btn = $(this);
        const originalHtml = $btn.html();

        // Show loading state
        $btn.prop('disabled', true).html('<span class="loading-spinner me-2"></span>جاري الحفظ...');

        const loadingToast = showBootstrapNotification('جاري حفظ القالب...', 'loading');

        try {
            // Get iframe content
            const iframe = document.getElementById('templet1');
            const innerDoc = iframe.contentDocument || iframe.contentWindow.document;

            let htmlContent = '';

            // Check if there's a text editor field
            if (typeof(innerDoc.getElementById('texteditor')) !== 'undefined' &&
                innerDoc.getElementById('texteditor') !== null) {
                htmlContent = innerDoc.getElementById('texteditor').value;
            } else {
                htmlContent = innerDoc.body.innerHTML;
            }

            // Prepare form data
            const formData = new FormData();
            formData.append('htmldata', htmlContent);
            formData.append('seltemplet', $selectTemplate.val());
            formData.append('ajax_submit', '1');

            // Submit via AJAX
            fetch('option.templet.html.hnt', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (loadingToast) loadingToast.hide();
                $btn.prop('disabled', false).html(originalHtml);

                if (data.success) {
                    showBootstrapNotification(data.message || 'تم حفظ القالب بنجاح', 'success', 3000);

                    // Reload iframe to show updated content
                    const currentSrc = $iframe1.attr('src');
                    $iframe1.attr('src', currentSrc + '&refresh=' + Date.now());
                } else {
                    showBootstrapNotification(data.error || 'فشل حفظ القالب', 'error', 5000);
                }
            })
            .catch(error => {
                if (loadingToast) loadingToast.hide();
                $btn.prop('disabled', false).html(originalHtml);
                console.error('Error:', error);
                showBootstrapNotification('حدث خطأ في الاتصال. يرجى المحاولة مرة أخرى', 'error', 5000);
            });

        } catch (error) {
            if (loadingToast) loadingToast.hide();
            $btn.prop('disabled', false).html(originalHtml);
            console.error('Error accessing iframe:', error);
            showBootstrapNotification('فشل قراءة محتوى القالب', 'error', 5000);
        }
    });

    /**
     * Restore Default Template Handler
     */
    $('#restoreBtn').on('click', function() {
        const templateName = $selectTemplate.val();
        const templateText = $selectTemplate.find('option:selected').text();

        if (!confirm('هل ترغب بالفعل في حذف "' + templateText + '" المعدل واستعادة الافتراضي؟\n\nهذا الإجراء لا يمكن التراجع عنه.')) {
            return false;
        }

        const $btn = $(this);
        const originalHtml = $btn.html();

        $btn.prop('disabled', true).html('<span class="loading-spinner me-2"></span>جاري الاستعادة...');

        const loadingToast = showBootstrapNotification('جاري استعادة القالب الافتراضي...', 'loading');

        const formData = new FormData();
        formData.append('restore_template', '1');
        formData.append('template_name', templateName);
        formData.append('ajax_submit', '1');

        fetch('option.templet.html.hnt', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (loadingToast) loadingToast.hide();
            $btn.prop('disabled', false).html(originalHtml);

            if (data.success) {
                showBootstrapNotification(data.message || 'تم استعادة القالب الافتراضي بنجاح', 'success', 3000);

                // Reload template iframe
                const showCode = $showSourceCode.is(':checked') ? '&showcode=1' : '';
                $iframe1.attr('src', '/aqary/admin/displaytemplet.hnt?templetname=' + templateName + showCode + '&refresh=' + Date.now());
            } else {
                showBootstrapNotification(data.error || 'فشل استعادة القالب', 'error', 5000);
            }
        })
        .catch(error => {
            if (loadingToast) loadingToast.hide();
            $btn.prop('disabled', false).html(originalHtml);
            console.error('Error:', error);
            showBootstrapNotification('حدث خطأ في الاتصال. يرجى المحاولة مرة أخرى', 'error', 5000);
        });
    });
});
</script>

